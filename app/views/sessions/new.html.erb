<% if flash[:notice] %>
  <div class="notice"><p style="color:red;" ><%= flash[:notice] %></p></div>
<% end %>

<%= form_for @user, :url => url_for(controller: 'sessions', action: 'create')  do |t|%>
  <p>
    <%= t.label :username %>
    <%= t.text_field :username %>
  </p>
  <p>
    <%= t.label :password %>
    <%= t.password_field :password %>
  </p>
  <%= t.submit "Finish" %>
<% end %>

<%= link_to('sign up with GitHub!', '/auth/github') %>