<h1>Welcome to Restaurant Reviews, <%= current_user.username %>!</h1>

<%= link_to "Restaurants", restaurants_path%>

<% current_user.reviews.each do |review| %>
  <h3><%= review.restaurant.name %></h3>
  <h5><%= review.title %></h5>
  <b><%= review.rating %></b>
  <p><%= review.content %></p>
  <%= link_to "Edit Review?", edit_user_review_path(review.id) %>
<% end %>